{
  "name": "friday",
  "version": "2026.2.16",
  "description": "SecureYeoman â€” Secure, local-first AI assistant",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspace=@friday/core",
    "dev:dashboard": "npm run dev --workspace=@friday/dashboard",
    "dev:mcp": "npm run dev --workspace=@friday/mcp",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint packages/",
    "lint:fix": "eslint packages/ --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json}\"",
    "typecheck": "tsc --noEmit && tsc --noEmit -p packages/dashboard/tsconfig.json",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist",
    "security:audit": "npm audit --audit-level=moderate",
    "release-notes": "npx tsx scripts/generate-release-notes.ts",
    "version:set": "bash scripts/set-version.sh"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/MacCracken/secureyeoman.git"
  },
  "license": "MIT",
  "author": "SecureYeoman Project Contributors",
  "keywords": [
    "ai",
    "agent",
    "security",
    "autonomous",
    "claude",
    "assistant"
  ],
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.26",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  }
}
