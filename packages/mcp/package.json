{
  "name": "@secureyeoman/mcp",
  "version": "2026.2.19",
  "description": "SecureYeoman MCP (Model Context Protocol) Service",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "secureyeoman-mcp": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@secureyeoman/shared": "*",
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@fastify/compress": "^8.0.1",
    "fastify": "^5.7.4",
    "jose": "^6.0.0",
    "pino": "^9.3.2",
    "node-html-markdown": "^1.3.0",
    "zod": "^3.23.8"
  },
  "optionalDependencies": {
    "playwright": "^1.50.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "tsx": "^4.16.5",
    "typescript": "^5.4.5",
    "vitest": "^4.0.18"
  }
}
