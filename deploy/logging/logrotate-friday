/var/log/friday/*.log {
    daily
    rotate 14
    compress
    delaycompress
    missingok
    notifempty
    create 0640 friday friday
    sharedscripts
    postrotate
        # Send SIGHUP to reload log handles
        [ -f /var/run/friday.pid ] && kill -HUP $(cat /var/run/friday.pid) 2>/dev/null || true
    endscript
}

/var/log/friday/audit/*.jsonl {
    daily
    rotate 90
    compress
    delaycompress
    missingok
    notifempty
    create 0640 friday friday
}
